@import "tailwindcss";

@source "<%= Darwin::Engine.root.join('app') %>";
@source "<%= Darwin::Engine.root.join('lib') %>";
@source "<%= Rails.root.join('app') %>";

@utility darwin-border {
  @apply border border-zinc-200 rounded-md;
}

@layer components {
  .darwin-shell {
    @apply min-h-screen bg-zinc-50 text-zinc-900;
  }

  .darwin-header {
    @apply border-b border-zinc-200 bg-white;
  }

  .darwin-header__inner {
    @apply max-w-6xl mx-auto px-6 py-4 flex items-center justify-between gap-4;
  }

  .darwin-header__title {
    @apply text-xl font-semibold tracking-tight;
  }

  .darwin-header__subtitle {
    @apply text-sm text-zinc-500;
  }

  .darwin-page {
    @apply max-w-6xl mx-auto px-6 py-10 space-y-8;
  }

  .darwin-card {
    @apply bg-white border border-zinc-200 rounded-xl shadow-sm;
  }

  .darwin-card__body {
    @apply p-6 space-y-4;
  }

  .darwin-card__header {
    @apply p-6 pb-4 flex items-center justify-between gap-3;
  }

  .darwin-card__title {
    @apply text-lg font-semibold;
  }

  .darwin-card__eyebrow {
    @apply text-xs uppercase tracking-wide text-zinc-500;
  }

  .darwin-btn {
    @apply inline-flex items-center justify-center gap-2 rounded-lg px-3 py-2 text-sm font-medium transition-colors duration-150 border border-transparent;
  }

  .darwin-btn--primary {
    @apply bg-zinc-900 text-white hover:bg-black;
  }

  .darwin-btn--ghost {
    @apply bg-white text-zinc-800 border-zinc-200 hover:border-zinc-300 hover:bg-zinc-50;
  }

  .darwin-btn--danger {
    @apply bg-red-600 text-white hover:bg-red-700;
  }

  .darwin-badge {
    @apply inline-flex items-center gap-1 rounded-full bg-zinc-100 px-2.5 py-1 text-xs font-medium text-zinc-700;
  }

  .darwin-table {
    @apply w-full border-collapse;
  }

  .darwin-table thead th {
    @apply text-left text-xs font-semibold uppercase tracking-wide text-zinc-500 border-b border-zinc-200 pb-2;
  }

  .darwin-table tbody td {
    @apply text-sm text-zinc-800 py-3 border-b border-zinc-100;
  }

  .darwin-table tr:last-child td {
    @apply border-0;
  }

  .darwin-actions {
    @apply flex items-center gap-2;
  }

  .darwin-form {
    @apply grid gap-4;
  }

  .darwin-form__group {
    @apply grid gap-2;
  }

  .darwin-form label {
    @apply text-sm font-medium text-zinc-700;
  }

  .darwin-form input[type="text"],
  .darwin-form input[type="number"],
  .darwin-form input[type="date"],
  .darwin-form input[type="datetime-local"],
  .darwin-form select,
  .darwin-form textarea {
    @apply w-full rounded-lg border border-zinc-200 bg-white px-3 py-2 text-sm text-zinc-900 shadow-sm focus:border-zinc-900 focus:ring-2 focus:ring-zinc-900/10;
  }

  .darwin-form input[type="checkbox"] {
    @apply rounded border-zinc-300 text-zinc-900 focus:ring-zinc-900;
  }

  .darwin-hint {
    @apply text-sm text-zinc-500;
  }

  .darwin-banner {
    @apply darwin-border bg-white shadow-sm p-4 flex flex-col gap-2;
  }

  .darwin-banner.is-hidden {
    @apply hidden;
  }

  .darwin-banner__header {
    @apply flex items-center justify-between gap-2;
  }

  .darwin-banner__title {
    @apply text-lg font-semibold text-zinc-900;
  }

  .darwin-banner__toggle {
    @apply text-sm px-3 py-1 rounded bg-zinc-900 text-white hover:bg-zinc-800;
  }

  .darwin-banner__body {
    @apply text-sm text-zinc-700 leading-relaxed;
  }
}
