<h1><%= @model.name %></h1>
<p>
  <strong>Table name: </strong> <%= @model.runtime_constant.table_name %><br>
</p>
<h2>Records</h2>

<table>
  <thead>
    <tr>
      <% @model.runtime_constant.columns.each do |column| %>
        <th><%= column.name.humanize %></th>
      <% end %>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
      <tr>
        <% @model.runtime_constant.columns.each do |column| %>
          <td><%= record.send(column.name) %></td>
        <% end %>
        <td><%= link_to 'Show', '#' %></td>
        <td><%= link_to 'Edit', '#' %></td>
        <td><%= link_to 'Destroy', '#' %></td>
      </tr>
    <% end %>
  </tbody>
</table>